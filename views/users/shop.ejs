    }

    if (queryInput) {
        if (queryString) {
            queryString += `&query=${encodeURIComponent(queryInput)}`;
        } else {
            queryString += `?query=${encodeURIComponent(queryInput)}`;
        }
    }

    // Update the form action with the new queryString
    this.action = `${action}${queryString}`;

    // Submit the form
    this.submit();
});

