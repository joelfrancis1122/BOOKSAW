    <style>
        @media print {
            body {
                margin: 0;
                padding: 0;
                overflow: hidden;
            }

            .main-wrap {
                max-width: 200%;
                height: auto !important;
            }

            .content-main {
                height: auto !important;
                page-break-inside: avoid !important;
            }

            .footer {
                position: fixed;
                bottom: 0;
                width: 100%;
                text-align: center;
                padding: 10px;
