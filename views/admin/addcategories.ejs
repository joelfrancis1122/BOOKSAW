<body>
  <div class="screen-overlay"></div>
  <%-include('../partials/adminAside')-%>
    <main class="main-wrap">
      <%-include('../partials/adminHeader')-%>
        <section class="content-main">
          <div class="content-header">
            <div>
              <h2 class="content-title card-title">Categories</h2>
              <p>Add, edit or delete a category</p>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <form method="post" action="/admin/addCategories">
                    <div class="mb-4">
                      <label for="product_name" class="form-label">Category Name</label>
                      <input type="text" placeholder="Type here" name="categoryName" class="form-control" id="product_name" pattern="[A-Za-z]+" title="Please enter only alphabets" />
                      
                    </div>

                    <div class="mb-4">
                      <label class="form-label" name=" Description">Description</label>
                      <textarea placeholder="Type here" name="Description" class="form-control"></textarea>
                    </div>
                    <div class="d-grid">
                      <button class="btn btn-primary" type="submit">
                        Create category
                      </button>
                    </div>
                  </form>
                </div>
                <div class="col-md-9">
                  <div class="table-responsive">
                    <% if(locals.categories) { %>
                      <table class="table table-hover" id="example">
                        <thead>
                          <tr>
                            <th class="text-center">
                              <div class="form-check"></div>
                            </th>
                            <th>No</th>
                            <th>Category name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(let i=0 ; i < categories.length ; i++) { %>
                            <tr>
                              <td class="text-center">
                                <div class="form-check"></div>
                              </td>
                              <td>
                                <%= i+1 %>
                              </td>
                              <td><b>
                                  <%= categories[i].categoryName %>
                                </b></td>
                              <td><b>
                                  <%= categories[i].Description %>
                                </b></td>
                              <td>
                                <% if (categories[i].is_Active) { %>
                                  <span class="badge rounded-pill alert-success">Active</span>
                                  <% } else { %>
                                    <span class="badge rounded-pill alert-danger">Blocked</span>
                                    <% } %>
                              </td>
                              <td>
                                <a href="/admin/loadeditCategory?id=<%=categories[i]._id%>"
                                  class="btn btn-sm font-sm btn-light rounded"
                                  style="background-color: #007bff; color: #fff; margin-left: 5px;">
                                  <i class="material-icons md-edit"></i>
                                  Edit
                                </a>
                                <% if (categories[i].is_Active) { %>
                                  <a href="#" onclick="confirmBlock('<%= categories[i]._id %>')"
                                    class="btn btn-sm font-sm btn-light rounded"
                                    style="background-color: rgb(255, 0, 0); transition: background-color 0.3s;">
                                    <i class="material-icons md-delete_forever"></i>
                                    <b> Block</b>
                                  </a>
                                  <% } else { %>
                                    <a href="#" onclick="confirmUnBlock('<%= categories[i]._id %>')"
                                      class="btn btn-sm font-sm btn-light rounded"
                                      style="background-color: #088178; transition: background-color 0.3s;">
                                      <i class="material-icons md-delete_forever"></i>
                                      Unblock
                                    </a>
                                    <% } %>
                              </td>
                            </tr>
                            <% } %>
                        </tbody>
                      </table>

                      <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <footer class="main-footer font-xs">
          <div class="row pb-30 pt-15">
